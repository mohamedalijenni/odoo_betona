<?xml version="1.0"?>
<odoo>
<record id="view_account_invoice_supplier_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
          
          <data>
              <field name="amount_tax" position="after">
                <field name="timbre_fiscal" readonly="1"/>
              </field>
          </data>
        </field>
    </record>
    
    
    <record id="view_account_invoice_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
          
          <data>
              <field name="amount_tax" position="after">
                <field name="timbre_fiscal" readonly="1"/>
              </field>
          </data>
        </field>
    </record>

    <record id="view_partner_invoice_tree_inherit" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="groups_id" eval="[(4,ref('purchase.group_purchase_user'))]"/>
        <field name="arch" type="xml">          
          <data>
         <xpath expr="//tree"  position="attributes">
            <attribute name="edite">false</attribute>
        </xpath>
        <xpath expr="//tree"  position="attributes">
            <attribute name="create">false</attribute>
        </xpath>
          </data>
          
        </field>
    </record>
    
</odoo>